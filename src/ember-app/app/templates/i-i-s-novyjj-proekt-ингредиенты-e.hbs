<h3 class="ui header">{{t "forms.i-i-s-novyjj-proekt-ингредиенты-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-novyjj-proekt-ингредиенты-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-novyjj-proekt-ингредиенты-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-novyjj-proekt-ингредиенты-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.сотрудники.должность
      class=(if (v-get validationModel.сотрудники "должность" "isInvalid") "error")
      label=(t "forms.i-i-s-novyjj-proekt-ингредиенты-e.сотрудники.должность-caption")
      data-test-i-i-s-novyjj-proekt-ингредиенты-e-сотрудники-должность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сотрудники "должность" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-novyjj-proekt-ингредиенты-e.составы-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.составы
      displayAttributeName="наименование"
      autocomplete=true
      relationName="составы"
      projection="СоставыL"
      title=(t "forms.i-i-s-novyjj-proekt-ингредиенты-e.составы-caption")
      readonly=readonly
      componentName="составыLookup"
      class=(if (v-get validationModel "составы" "isInvalid") "error")
      data-test-i-i-s-novyjj-proekt-ингредиенты-e-составы=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "составы" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.количество
      class=(if (v-get validationModel "количество" "isInvalid") "error")
      label=(t "forms.i-i-s-novyjj-proekt-ингредиенты-e.количество-caption")
      data-test-i-i-s-novyjj-proekt-ингредиенты-e-количество=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "количество" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.остаток
      class=(if (v-get validationModel "остаток" "isInvalid") "error")
      label=(t "forms.i-i-s-novyjj-proekt-ингредиенты-e.остаток-caption")
      data-test-i-i-s-novyjj-proekt-ингредиенты-e-остаток=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "остаток" "message")}}
  </div>
</form>
